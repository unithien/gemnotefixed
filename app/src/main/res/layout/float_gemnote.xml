<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:background="@drawable/float_bg">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#6B4EAA">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GemNote"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPaste"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/btn_header"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp" />

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_marginStart="6dp"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/btn_header"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp" />

        <Button
            android:id="@+id/btnType"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_marginStart="6dp"
            android:text="T"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/btn_header"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_marginStart="6dp"
            android:text="X"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F0FF"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/entriesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />

    </ScrollView>

    <!-- Resize Handle -->
    <View
        android:id="@+id/resizeHandle"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#E8E0F0" />

</LinearLayout>
