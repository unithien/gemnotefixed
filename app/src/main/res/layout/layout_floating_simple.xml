<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floatingRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <!-- Drag header -->
        <LinearLayout
            android:id="@+id/dragHandle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#6B4EAA"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/statusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GemNote"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Close"/>
        </LinearLayout>

        <!-- Content -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F5F0FF">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:clipToPadding="false"/>

            <TextView
                android:id="@+id/emptyView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="No entries\n\nTap + to paste"
                android:textColor="#888888"/>
        </FrameLayout>

        <!-- Bottom buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#EEEEEE">

            <Button
                android:id="@+id/fabPaste"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="20sp"
                android:backgroundTint="#6B4EAA"/>

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Connect"
                android:textSize="11sp"
                android:backgroundTint="#6B4EAA"/>

            <Button
                android:id="@+id/btnType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Note"
                android:textSize="11sp"
                android:backgroundTint="#6B4EAA"/>
        </LinearLayout>

        <!-- Resize handle -->
        <View
            android:id="@+id/resizeHandle"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="#D0D0D0"/>

    </LinearLayout>
</FrameLayout>
